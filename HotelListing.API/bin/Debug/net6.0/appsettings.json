{
  "ConnectionStrings": {
    "HotelListingDbConnectionString": "Server=(localdb)\\mssqllocaldb;Database=HotelListingDatabase;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "ServerUrl": "https://localhost:7288"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
